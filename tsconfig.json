{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "emitDeclarationOnly": true,
        "downlevelIteration": true,
        "esModuleInterop": true, 
        "outDir": "types",
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "types": [
            "vite/client",
            "@types/node",
        ]
    },
    "include": [
        "./src/**/*.vue",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./src/**/*.js",
        "./.eslintrc.js",
        "./vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}